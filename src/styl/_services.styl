$borda-services = 1px solid $color-cinza-claro

section.services
  padding rem(20px) 0
  background $color-branco
  text-align center
  
  &:after
    content ''
    display block
    clear both      
  
  article
    position relative
    margin-bottom rem(20px)
    padding rem(5px)
    +above(cut)
      border $borda-services
      col(.237)
    +below(cut)
      stack()	
	
    span.rotule
      display block
      width 50px
      height 50px
      text-align center
      padding 15px
      background $color-salmao
      vendor(border-radius, 50%)

      i
        font-size 50px
        color $color-branco   
    	
      p
        color $color-cinza-escuro    